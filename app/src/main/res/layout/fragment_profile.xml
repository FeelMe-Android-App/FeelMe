<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.profile.view.ProfileFragment"
    android:background="@color/primary_color"
    android:forceDarkAllowed="false"
    android:orientation="horizontal">

    <include
        layout="@layout/loader"
        android:id="@+id/vgLoader" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/vgProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tlUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:backgroundTint="@color/primary_color"
                app:tabRippleColor="@color/white"
                app:tabTextColor="@color/white"
                app:tabIconTint="@color/white"
                app:layout_collapseMode="pin"
                app:tabIndicatorColor="@color/white"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_saved"
                    android:backgroundTint="@color/white"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_watched_movies"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_streamings"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_watched_movies"
                    />
            </com.google.android.material.tabs.TabLayout>
            <View
                android:id="@+id/bottomNavigationLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/stroke_color"
                android:backgroundTint="@color/stroke_color"
                app:layout_constraintTop_toBottomOf="@id/fragmentNavHost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpUserProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="25dp"
                />
        </LinearLayout>

        <include android:id="@+id/vgProfileHeader" layout="@layout/profile_header_component" android:fitsSystemWindows="true" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>