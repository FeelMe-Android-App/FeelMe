<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.profile.view.ProfileFragment"
    android:background="@color/primary_color"
    android:forceDarkAllowed="false"
    android:orientation="horizontal">

    <include
        layout="@layout/loader"
        android:id="@+id/vgLoader" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/vgProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tlUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:backgroundTint="@color/primary_color"
                app:tabRippleColor="@color/white"
                app:tabTextColor="@color/white"
                app:tabIconTint="@color/white"
                app:layout_collapseMode="pin"
                app:tabIndicatorColor="@color/white"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_saved"
                    android:backgroundTint="@color/white"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_watched_movies"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_streamings"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_watched_movies"
                    />
            </com.google.android.material.tabs.TabLayout>
            <View
                android:id="@+id/bottomNavigationLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/stroke_color"
                android:backgroundTint="@color/stroke_color"
                app:layout_constraintTop_toBottomOf="@id/fragmentNavHost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpUserProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="25dp"
                />
        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/rlUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btBack"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="top|left"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/white_seventy_percent"
                            android:backgroundTint="@color/white_ten_percent"
                            android:paddingEnd="5dp"
                            android:paddingBottom="9dp"
                            android:src="@drawable/ic_back_arrow"
                            app:borderWidth="0dp"
                            app:elevation="0dp"
                            app:fabCustomSize="50dp"
                            android:layout_marginBottom="15dp" />

                        <TextView
                            android:id="@+id/tvNomeLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toEndOf="@id/btBack"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/hello_2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_2"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <include
                        android:id="@+id/includeUserProfile"
                        layout="@layout/snippet_top_profilebar"
                        app:layout_collapseMode="parallax" />
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>