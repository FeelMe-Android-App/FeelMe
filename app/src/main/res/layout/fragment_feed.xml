<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.feed.view.FeedFragment"
    android:background="@color/primary_color"
    android:forceDarkAllowed="false">

    <include
        layout="@layout/loader"
        android:id="@+id/vgLoader" />

    <LinearLayout
        android:id="@+id/vgNoFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="invisible">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_rawRes="@raw/no_friends"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_friends"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/title_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends_to_feed"
            android:textColor="@color/white_seventy_percent"
            android:textAlignment="center"
            android:fontFamily="@font/lato"
            />
        <Button
            android:id="@+id/btAddFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/title_2"
            android:text="Pesquisar amigos"
            android:background="@drawable/square_rounded_white_gradient"
            android:layout_gravity="center|bottom"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/vgUserFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/rlUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:padding="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvNomeLogin"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_toEndOf="@id/btBack"
                            android:fontFamily="@font/lato_bold"
                            android:text="Feed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_2"
                            android:layout_gravity="center_vertical"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fbAddFriend"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="top|left"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/white_seventy_percent"
                            android:backgroundTint="@color/white_ten_percent"
                            android:paddingEnd="5dp"
                            android:paddingBottom="9dp"
                            android:src="@drawable/ic_user"
                            android:tint="@color/white"
                            app:borderWidth="0dp"
                            app:elevation="0dp"
                            app:fabCustomSize="50dp"
                            app:tint="@color/white"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFriendsMovies"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    tools:listitem="@layout/watching_movie_item"
                    tools:itemCount="2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:clipToPadding="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Atividade de seus amigos"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_2"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFriendsComments"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/comment_movie_item"
                    tools:itemCount="6"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>