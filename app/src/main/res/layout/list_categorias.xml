<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary_color"
    android:layout_height="wrap_content">

        <View
            android:id="@+id/vgCategory"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="16dp"
            android:background="@drawable/categories_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Drama"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"
            app:layout_constraintBottom_toBottomOf="@+id/vgCategory"
            app:layout_constraintEnd_toEndOf="@+id/vgCategory"
            app:layout_constraintStart_toStartOf="@+id/vgCategory"
            app:layout_constraintTop_toTopOf="@id/vgCategory" />


</androidx.constraintlayout.widget.ConstraintLayout>